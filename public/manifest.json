{
  "manifest_version": 3,
  "name": "ReadEase",
  "version": "1.0.0",
  "description": "AI assistant extnsion for readers.",

  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["*://*/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],

  "action": {
    "default_popup": "index.html"
  }
}
